@page
@model Group_Project.Pages.ViewFile.ViewModel
@{
}
<body style="background-color: #232323;">
    <h1>:: View Picture Page ::</h1>
    <br />
    
    <div style="color: #f2f2f2">

    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>File Name</th>
                    <th>File</th>
                    <th>Action</th>
                </tr>
            </thead>

            @for (int i = 0; i < Model.FileRec.Count; i++)
            {
                <tr>
                    <td>@Model.FileRec[i].Username</td>
                    <td>@Model.FileRec[i].FileName</td>
                    <td><img src="~/Files/@Model.FileRec[i].FileName" style=" max-width:80px;" /></td>
                    <td><a asp-page="/DeleteFile/Delete" asp-route-id="@Model.FileRec[i].UserID">Delete</a></td>
                </tr>
            }
        </table>
    </div></div>
    </body>